<Window
    x:Class="VierGewinntWpfApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:VierGewinntWpfApp"
    mc:Ignorable="d"
    ContentRendered="WindowContentRendered"
    Title="Vier Gewinnt"
    Height="450"
    Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*"></RowDefinition>
            <RowDefinition
                Height="9*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Grid.Row="0">
            <Button
                Margin="5"
                Click="NeuesSpielButtonClicked">Neues Spiel</Button>
            <TextBlock
                VerticalAlignment="Center"
                Margin="5, 0, 0, 0"
                Text="KI:">
            </TextBlock>
            <ComboBox
                Margin="5"
                Name="kiListe"
                SelectionChanged="KiAusgewählt">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel
                            Orientation="Horizontal">
                            <TextBlock
                                Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <Viewbox
            Margin="10"
            Grid.Row="1"
            Stretch="Uniform"
            x:Name="Viewbox">
        </Viewbox>
    </Grid>
</Window>
